/**
 * Toggle Schools
 * 
 * Behavior for school toggles
 */

(function (window, $) {
    'use strict';

    var document = window.document,
        body = document.body,
        initSchool = $(body).data('school');

    var SchoolToggle = function(el){
        
        var $el = $(el);
        
        this.$el = $(el);
        this.value = $el.data('value');
        this.current = $('.js-current-school');
        
        this.init();
    };

    SchoolToggle.prototype.init = function(){
        
        var _this = this; 

        _this.$el.on( 'click', function(e){
            e.preventDefault();

            $(body).attr('data-school', _this.value);
            _this.current.text(_this.value);
        });

    };

    $(document).ready(function(){
        $('[data-toggle="school"]').each(function(){
            new SchoolToggle(this);
        });
    });

})(this, jQuery);